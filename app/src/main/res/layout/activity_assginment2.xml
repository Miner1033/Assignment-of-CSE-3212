<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white">

        <!-- User Form Image -->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/form"
            android:contentDescription="Form Icon"
            android:layout_marginBottom="16dp"/>

        <!-- Form Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0388F2"
            android:textStyle="bold"
            android:text="User Form"
            android:textSize="15sp"
            android:layout_marginBottom="16dp"/>

        <!-- Name EditText -->
        <EditText
            android:id="@+id/nameEditText"
            android:background="@drawable/custom_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your name"
            android:layout_marginBottom="16dp"/>

        <!-- Subscriptions CheckBoxes -->
        <CheckBox
            android:id="@+id/subscribeCheckBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SSC"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/subscribeCheckBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HSC"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/subscribeCheckBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BSC"
            android:layout_marginBottom="16dp"/>

        <!-- Gender RadioGroup -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select gender:"
            android:textSize="15sp"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/genderRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/maleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:layout_marginEnd="16dp"/>

            <RadioButton
                android:id="@+id/femaleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"/>
        </RadioGroup>

        <!-- Brightness SeekBar -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adjust brightness:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <SeekBar
            android:id="@+id/brightnessSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:layout_marginBottom="16dp"/>

        <!-- Dark Mode Switch -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable dark mode:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <Switch
            android:id="@+id/darkModeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dark Mode"
            android:layout_marginBottom="16dp"/>

        <!-- Submit Button -->
        <Button
            android:backgroundTint="#2a2a2a"
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginBottom="10dp"/>

        <!-- RatingBar -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate your experience:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:layout_marginBottom="8dp"/>

        <!-- Rating Value Display -->
        <TextView
            android:id="@+id/ratingValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating: 0"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>
</ScrollView>
